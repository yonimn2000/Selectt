@model Selectt.Entities.Answer

@{
    ViewBag.Title = "Delete Answer";
}

<h2 class="Result-header text-center">@ViewBag.Title</h2>

<h3 class="delete-header text-center">Are you sure you want to delete this answer from the list?</h3>
<div>
    <p>
        <table class="table  table-bordered table-hover text-center align-middle">
            <thead class="thead-light">
                <tr>
                    <th class="table-header-polls" width="50%">@Html.DisplayNameFor(model => model.PollAnswer)</th>

                </tr>
            </thead>
            <tr>
                <td class="table-contet" width="50%">@Html.DisplayFor(model => model.PollAnswer)</td>

            </tr>
        </table>
    </p>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color text-center">
            <input type="submit" value="Delete" class="warning-button" />
            <a href="@Url.Action("Edit", "Polls", new { id = Model.PollId })" class="universal-button"><i class="fa fa-envelope-open-o fa-sm" aria-hidden="true"></i> Back To Poll Editor</a>
        </div>
    }


</div>
