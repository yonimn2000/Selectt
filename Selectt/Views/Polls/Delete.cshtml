@model Selectt.Entities.Poll

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Poll</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Question)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Question)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EndDateTime)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EndDateTime)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.AreResultsPublic)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AreResultsPublic)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.WasSent)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.WasSent)
        </dd>

        <dt>
            Answers
        </dt>

        <dd>
            <table class="table">
                <tr>
                    <th>Answer</th>
                    <th>Responses</th>
                </tr>
                @foreach (var answer in Model.Answers)
                {
                    <tr>
                        <td>@answer.PollAnswer</td>
                        <td>@answer.Responses.Count</td>
                    </tr>
                }
            </table>
        </dd>

        <dt>
            Respondents
        </dt>

        <dd>
            <table class="table">
                <tr>
                    <th>Respondent Email</th>
                    <th>Has Voted</th>
                </tr>
                @foreach (var respondent in Model.Respondents)
                {
                    <tr>
                        <td>@respondent.Email</td>
                        <td>@respondent.HasVoted</td>
                    </tr>
                }
            </table>
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>