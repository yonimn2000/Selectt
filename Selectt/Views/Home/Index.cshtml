@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Welcome to Selectt!</h1>
    <p class="lead">With Selectt, you can create your own polls. </p>
    
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Getting started</h2>
        <p>To get started, click on the "Register" button in the top right corner of the page. If you already have an account, you can click "Log In" instead.</p>
        <p>@Html.ActionLink("Register", "Register", "Account", new { Area = "" }, new { @class = "btn btn-primary" })&nbsp;@Html.ActionLink("Log in", "Login", "Account", new { Area = "" }, new { @class = "btn btn-primary" })</p>
       
    </div>
    <div class="col-md-4">
        <h2>Create a Poll</h2>
        <p>Click the button below to create your own poll!</p>
        <br /><br />
              <p>@Html.ActionLink("Make a Poll", "Create", "Polls", new { Area = "" }, new { @class = "btn btn-primary" })</p>
    </div>
    <div class="col-md-4">
        <h2>About Us</h2>
        <p>If you would like to learn more about who we are, you can click on the button below.</p>
        <br />
        <p>@Html.ActionLink("About", "About", "Home", new { Area = "" }, new { @class = "btn btn-primary" })</p>
    </div>
</div>