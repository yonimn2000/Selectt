@model Selectt.Models.RespondentEditModel

@{
    ViewBag.Title = "Edit";
}

<h2 class="Result-header text-center">Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4 class="dt-header1 text-center">Respondent</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.RespondentId)

        <div class="form-group text-center">
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "table-content col-md-2" })
            <div class="form-size">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control text-center" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group text-center">
            <div>
                <input type="submit" value="Save" class="universal-button" />
            </div>
        </div>
    </div>
}

<div>
    <a href="@Url.Action("Edit", "Polls", new { id = Model.PollId })" class="universal-button"><i class="fa fa-envelope-open-o fa-sm" aria-hidden="true"></i> Back To Poll Editor</a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

