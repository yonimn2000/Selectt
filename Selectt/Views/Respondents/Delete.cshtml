@model Selectt.Entities.Respondent

@{
    ViewBag.Title = "Delete";
}

<h2 class="Result-header text-center">Delete</h2>
<h3 class="delete-header text-center">Are you sure you want to delete this Respondent from the list</h3>
<div>

    <hr />
    <h4 class="dt-header1 text-center">Respondent</h4>
    <p>
        <table class="table  table-bordered table-hover text-center align-middle">
            <thead class="thead-light">
                <tr>
                    <th class="table-header-polls" width="50%">@Html.DisplayNameFor(model => model.Email)</th>
                    <th class="table-header-polls" width="50%">@Html.DisplayNameFor(model => model.HasVoted)</th>
                </tr>
            </thead>
            <tr>
                <td class="table-contet" width="50%">@Html.DisplayFor(model => model.Email)</td>            
                <td class="table-content" width="50%">@Html.DisplayFor(model => model.HasVoted)</td>
            </tr>
        </table>
    </p>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color text-center">
            <input type="submit" value="Delete" class="warning-button" />
            
            <a href="@Url.Action( "Edit", "Polls", new { id = Model.PollId })" class="universal-button"><i class="fa fa-envelope-open-o fa-sm" aria-hidden="true"></i> Back To Poll Editor</a>

        </div>
    }
        </div>

